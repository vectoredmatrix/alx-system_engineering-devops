#!/bin/bash

WATER_BASE="water"
STIR_BASE="stir"
TARGET_BASE="bestchol"

to_decimal() {
    local num=$1 base=$2
    local dec=0 b=${#base}
    for ((i=0;i<${#num};i++)); do
        ch=${num:i:1}
        idx=$(expr index "$base" "$ch")
        ((idx--))
        dec=$(echo "$dec * $b + $idx" | bc)
    done
    echo "$dec"
}

from_decimal() {
    local num=$1 base=$2
    local out="" b=${#base}
    if [ "$num" -eq 0 ]; then
        echo "${base:0:1}"
        return
    fi
    while [ "$num" -gt 0 ]; do
        mod=$(echo "$num % $b" | bc)
        out="${base:mod:1}$out"
        num=$(echo "$num / $b" | bc)
    done
    echo "$out"
}

sum=$(echo "$(to_decimal "$WATER" "$WATER_BASE") + $(to_decimal "$STIR" "$STIR_BASE")" | bc)
from_decimal "$sum" "$TARGET_BASE"
